<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
  <Design.PreviewWith>
      <UniformGrid Columns="3" Rows="6" Background="{DynamicResource PrimaryColor}">
          <Button Classes="TabButton">
              <StackPanel Orientation="Horizontal" Spacing="10">
                  <Image Classes="TabIcon">
                      <Image.Source>
                          <SvgImage Source="{StaticResource HomeLogo}"/>
                      </Image.Source>
                  </Image>
                  <Label Classes="TabLabel" VerticalContentAlignment="Center" Content="Tab"/>
              </StackPanel>
          </Button>

          <Label Classes="Primary" VerticalAlignment="Center" HorizontalAlignment="Center">Primary Label</Label>
          <Label Classes="Secondary" VerticalAlignment="Center" HorizontalAlignment="Center">Secondary Label</Label>
          <Label Classes="Title" VerticalAlignment="Center" HorizontalAlignment="Center">Title</Label>
          <Label Classes="Subtitle" VerticalAlignment="Center" HorizontalAlignment="Center">Subtitle</Label>
          <Label Classes="Link" VerticalAlignment="Center" HorizontalAlignment="Center">Refresh</Label>
          <Label Classes="Number" VerticalAlignment="Center" HorizontalAlignment="Center">120 (Number)</Label>
          <Button Classes="Primary">
              Primary Button
          </Button>

          <Button Classes="Secondary">
              Secondary Button
          </Button>
      </UniformGrid>
  </Design.PreviewWith>

    <Style Selector="Label">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"></Setter>
    </Style>

    <Style Selector="Button">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"></Setter>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"></Setter>
    </Style>

  <!-- Add Styles Here -->

    <Style Selector="Label.Primary">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
    </Style>

    <Style Selector="Label.Secondary">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryFontColor}"></Setter>
    </Style>

    <Style Selector="Label.Link">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource LinkAccent}"/>
    </Style>

    <Style Selector="Label.Title">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
    </Style>

    <Style Selector="Label.Subtitle">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryFontColor}"></Setter>
    </Style>

    <Style Selector="Label.Number">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
    </Style>
    
    <Style Selector="Button.TabButton">
        <Setter Property="Opacity" Value="1"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="CornerRadius" Value="10"></Setter>
    </Style>

    <Style Selector="Button.TabButton:pressed /template/ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryAccent}" />
    </Style>

    <Style Selector="Button.Primary">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryAccent}"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="CornerRadius" Value="5"></Setter>

        <Style Selector="^.Blue">
            <Setter Property="Background" Value="#005c92"/>
        </Style>
    </Style>

    <Style Selector="Image.TabIcon">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="Label.TabLabel">
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryFontColor}"></Setter>
    </Style>

    <Style Selector="Rectangle.Separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="Fill" Value="{DynamicResource PrimaryAccent}"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>
    
</Styles>
